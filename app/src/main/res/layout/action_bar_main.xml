<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_size"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_action_bar_menu"
        android:layout_width="@dimen/padded_action_bar_size"
        android:layout_height="@dimen/padded_action_bar_size"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/ic_menu" />

    <com.singtel.aurora.test.custom_views.CustomTextView
        app:fontPath="@string/font_avenirltpro_book"
        android:id="@+id/tv_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="@dimen/space_normal"
        android:singleLine="true"
        android:layout_marginRight="@dimen/padded_action_bar_size"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_title"
        />

</LinearLayout>