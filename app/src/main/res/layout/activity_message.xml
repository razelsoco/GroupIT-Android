<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.singtel.groupit.viewmodel.MessageViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.singtel.groupit.view.activity.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"
            android:background="?attr/colorPrimary"
            app:contentInsetEnd="@dimen/space_none"
            app:contentInsetLeft="@dimen/space_none"
            app:contentInsetRight="@dimen/space_none"
            app:contentInsetStart="@dimen/space_none"
            tools:ignore="MissingPrefix">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView android:id="@+id/bt_cancel"
                    style="@style/topbarButton"
                    android:layout_alignParentLeft="true"
                    android:text="@string/cancel"
                    android:onClick="@{viewModel.onCancelClicked}"/>

                <TextView
                    android:layout_toLeftOf="@+id/bt_done"
                    android:layout_toRightOf="@+id/bt_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/send_note"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_title"
                    app:fontPath="@string/font_avenirltpro_book" />

                <TextView android:id="@+id/bt_done"
                    style="@style/topbarButton"
                    android:layout_alignParentRight="true"
                    android:text="@string/done"
                    android:onClick="@{viewModel.onDoneClicked}"/>


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:maxLength="300"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onTextChanged="@{viewModel.onTextChanged}"
                android:padding="@dimen/space_normal"
                android:textColor="@color/black"
                fontPath="@string/font_avenirltpro_roman"
                android:textSize="17sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.characterCountLeft}"
                android:textColor="@color/brownishGrey"
                android:textSize="13sp"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/space_normal"
                />
        </FrameLayout>

    </LinearLayout>
</layout>