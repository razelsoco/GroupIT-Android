<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.singtel.groupit.viewmodel.ComposerViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.singtel.groupit.view.activity.ComposerActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"
            android:background="?attr/colorPrimary"
            app:contentInsetEnd="@dimen/space_none"
            app:contentInsetLeft="@dimen/space_none"
            app:contentInsetRight="@dimen/space_none"
            app:contentInsetStart="@dimen/space_none"
            tools:ignore="MissingPrefix">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView android:id="@+id/bt_back"
                    android:layout_width="@dimen/padded_action_bar_size"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_back"
                    android:onClick="@{viewModel.onLeftButtonClicked}"/>

                <TextView android:layout_toRightOf="@+id/bt_back"
                    android:layout_toLeftOf="@+id/bt_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/send_note"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_title"
                    app:fontPath="@string/font_avenirltpro_book" />

                <TextView android:id="@+id/bt_next"
                    style="@style/topbarButton"
                    android:text="@{viewModel.rightButtonText}"
                    android:enabled="@{viewModel.isRightButtonEnabled}"
                    android:onClick="@{viewModel.onRightButtonClicked}"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>