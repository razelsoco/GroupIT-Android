<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" >
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">@dimen/textSize_body</item>
    </style>

    <style name="dashboardMenuItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textSize">17sp</item>
        <item name="fontPath">@string/font_avenirltpro_roman</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="topbarTitle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="fontPath">@string/font_avenirltpro_heavy</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="topbarButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSize_subheading</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="fontPath">@string/font_avenirltpro_book</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/space_normal</item>
        <item name="android:paddingRight">@dimen/space_normal</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ArticleTextView" >
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">@dimen/textSize_body</item>
    </style>

    <style name="LeftInsetDivider" >
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/divider_silver</item>
    </style>

</resources>

