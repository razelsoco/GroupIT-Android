<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="NoActionModeCustomization">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NoActionModeCustomization" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarStyle">@style/actionbar_transparent_ActionBar</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <!-- Light.DarkActionBar specific -->
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:listViewStyle">@style/ListViewStyle</item>-->
        <!--<item name="android:divider">@drawable/transparent_1px</item>-->
    </style>

    <!--<style name="ListViewStyle" parent="@android:style/Widget.ListView">-->
        <!--<item name="android:listSelector">@drawable/bg_article_cell</item>-->
    <!--</style>-->

    <style name="actionbar_transparent_ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:progressBarStyle">@style/aurora_actionbar_ProgressBar</item>
    </style>

    <style name="aurora_actionbar_ProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_actionbar</item>
    </style>

    <style name="dashboardMenuItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textSize">17sp</item>
        <item name="fontPath">@string/font_avenirltpro_roman</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="topbarTitle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="fontPath">@string/font_avenirltpro_heavy</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
